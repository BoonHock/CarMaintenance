<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
	xmlns:tools="http://schemas.android.com/tools"
	android:layout_width="match_parent"
	android:layout_height="match_parent">

	<ScrollView
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:layout_above="@id/share_frame">

		<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:orientation="vertical"
			android:paddingStart="16dp"
			android:paddingTop="24dp"
			android:paddingEnd="16dp"
			android:paddingBottom="24dp">

			<TextView
				android:id="@+id/txt_period"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_gravity="center_horizontal"
				android:layout_marginBottom="4dp"
				android:textColor="@color/colorPrimaryDark"
				android:textSize="18sp"
				android:textStyle="bold"
				tools:text="27 June 2020 — 1 July 2020" />

			<LinearLayout
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_gravity="center_horizontal"
				android:layout_marginBottom="24dp"
				android:orientation="horizontal">

				<TextView
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:layout_marginEnd="8dp"
					android:text="@string/label_updated"
					android:textStyle="italic" />

				<TextView
					android:id="@+id/txt_updated_on"
					android:layout_width="wrap_content"
					android:layout_height="wrap_content"
					android:textStyle="italic"
					tools:text="27 June 2020 18:47" />
			</LinearLayout>

			<TableLayout
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_gravity="center_horizontal"
				android:stretchColumns="1">

				<TableRow android:layout_marginBottom="8dp">

					<TextView
						style="@style/fuel_price_fuel_name"
						android:layout_column="0"
						android:background="@color/colorPrimary"
						android:text="@string/ron_95" />

					<TextView
						android:id="@+id/txt_price_ron95"
						android:layout_width="wrap_content"
						android:layout_height="match_parent"
						android:layout_column="1"
						android:layout_gravity="center_vertical"
						android:background="@drawable/border_top_bottom_primary"
						android:gravity="center_vertical"
						android:padding="8dp"
						android:textAllCaps="true"
						android:textColor="@color/colorPrimary"
						android:textSize="18sp"
						android:textStyle="bold"
						tools:text="myr 1.50 / L" />

					<TextView
						android:id="@+id/txt_price_change_ron95"
						android:layout_width="wrap_content"
						android:layout_height="match_parent"
						android:layout_column="2"
						android:layout_gravity="center_vertical"
						android:background="@drawable/border_top_bottom_right_primary"
						android:gravity="center_vertical"
						android:padding="8dp"
						android:textColor="@color/fuel_down"
						tools:drawableStart="@drawable/ic_arrow_drop_down_green_24"
						tools:text="-0.05" />
				</TableRow>

				<TableRow android:layout_marginBottom="8dp">

					<TextView
						style="@style/fuel_price_fuel_name"
						android:layout_column="0"
						android:background="@color/colorPrimary"
						android:text="@string/ron_97" />

					<TextView
						android:id="@+id/txt_price_ron97"
						android:layout_width="wrap_content"
						android:layout_height="match_parent"
						android:layout_column="1"
						android:layout_gravity="center_vertical"
						android:background="@drawable/border_top_bottom_primary"
						android:gravity="center_vertical"
						android:padding="8dp"
						android:textAllCaps="true"
						android:textColor="@color/colorPrimary"
						android:textSize="18sp"
						android:textStyle="bold"
						tools:text="myr 1.50 / L" />

					<TextView
						android:id="@+id/txt_price_change_ron97"
						android:layout_width="wrap_content"
						android:layout_height="match_parent"
						android:layout_column="2"
						android:layout_gravity="center_vertical"
						android:background="@drawable/border_top_bottom_right_primary"
						android:gravity="center_vertical"
						android:padding="8dp"
						android:textColor="@color/fuel_up"
						tools:drawableStart="@drawable/ic_arrow_drop_up_red_24"
						tools:text="+0.05" />
				</TableRow>

				<TableRow>

					<TextView
						style="@style/fuel_price_fuel_name"
						android:layout_column="0"
						android:background="@color/colorPrimary"
						android:text="@string/diesel" />

					<TextView
						android:id="@+id/txt_price_diesel"
						android:layout_width="wrap_content"
						android:layout_height="match_parent"
						android:layout_column="1"
						android:layout_gravity="center_vertical"
						android:background="@drawable/border_top_bottom_primary"
						android:gravity="center_vertical"
						android:padding="8dp"
						android:textAllCaps="true"
						android:textColor="@color/colorPrimary"
						android:textSize="18sp"
						android:textStyle="bold"
						tools:text="myr 1.50 / L" />

					<TextView
						android:id="@+id/txt_price_change_diesel"
						android:layout_width="wrap_content"
						android:layout_height="match_parent"
						android:layout_column="2"
						android:layout_gravity="center_vertical"
						android:background="@drawable/border_top_bottom_right_primary"
						android:gravity="center_vertical"
						android:padding="8dp"
						android:textColor="@color/fuel_down"
						tools:drawableStart="@drawable/ic_arrow_drop_down_green_24"
						tools:text="-0.05" />
				</TableRow>
			</TableLayout>

			<TextView
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_gravity="center_horizontal"
				android:layout_marginTop="32dp"
				android:layout_marginBottom="8dp"
				android:text="@string/price_forecasts"
				android:textAppearance="?android:textAppearanceLarge"
				android:textStyle="bold" />

			<TextView
				android:id="@+id/txt_forecast_unavailable"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:text="@string/no_forecast_available"
				android:textAppearance="?android:textAppearanceMedium"
				android:textStyle="italic"
				android:visibility="gone"
				tools:visibility="visible" />

			<TextView
				android:id="@+id/txt_forecast_period"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_gravity="center_horizontal"
				android:layout_marginBottom="12dp"
				android:textAppearance="?android:textAppearanceMedium"
				android:visibility="gone"
				tools:text="27 June 2020 — 1 July 2020"
				tools:visibility="visible" />

			<TableLayout
				android:id="@+id/table_forecast"
				android:layout_width="wrap_content"
				android:layout_height="wrap_content"
				android:layout_gravity="center_horizontal"
				android:stretchColumns="1"
				android:visibility="gone"
				tools:visibility="visible">

				<TableRow android:layout_marginBottom="8dp">

					<TextView
						style="@style/fuel_price_fuel_name"
						android:layout_column="0"
						android:background="@color/fuel_forecast"
						android:text="@string/ron_95" />

					<TextView
						android:id="@+id/txt_forecast_ron95"
						android:layout_width="wrap_content"
						android:layout_height="match_parent"
						android:layout_column="1"
						android:layout_gravity="center_vertical"
						android:background="@drawable/border_top_bottom_right_forecast"
						android:gravity="center_vertical"
						android:padding="8dp"
						android:textAllCaps="true"
						android:textColor="@color/fuel_forecast"
						android:textSize="18sp"
						android:textStyle="bold"
						tools:text="myr 1.50 ± 0.05 / L" />
				</TableRow>

				<TableRow android:layout_marginBottom="8dp">

					<TextView
						style="@style/fuel_price_fuel_name"
						android:layout_column="0"
						android:background="@color/fuel_forecast"
						android:text="@string/ron_97" />

					<TextView
						android:id="@+id/txt_forecast_ron97"
						android:layout_width="wrap_content"
						android:layout_height="match_parent"
						android:layout_column="1"
						android:layout_gravity="center_vertical"
						android:background="@drawable/border_top_bottom_right_forecast"
						android:gravity="center_vertical"
						android:padding="8dp"
						android:textAllCaps="true"
						android:textColor="@color/fuel_forecast"
						android:textSize="18sp"
						android:textStyle="bold"
						tools:text="myr 1.50 ± 0.05 / L" />
				</TableRow>

				<TableRow android:layout_marginBottom="8dp">

					<TextView
						style="@style/fuel_price_fuel_name"
						android:layout_column="0"
						android:background="@color/fuel_forecast"
						android:text="@string/diesel" />

					<TextView
						android:id="@+id/txt_forecast_diesel"
						android:layout_width="wrap_content"
						android:layout_height="match_parent"
						android:layout_column="1"
						android:layout_gravity="center_vertical"
						android:background="@drawable/border_top_bottom_right_forecast"
						android:gravity="center_vertical"
						android:padding="8dp"
						android:textAllCaps="true"
						android:textColor="@color/fuel_forecast"
						android:textSize="18sp"
						android:textStyle="bold"
						tools:text="myr 1.50 ± 0.05 / l" />
				</TableRow>
			</TableLayout>

		</LinearLayout>
	</ScrollView>

	<FrameLayout
		android:id="@+id/share_frame"
		android:layout_width="match_parent"
		android:layout_height="wrap_content"
		android:layout_alignParentBottom="true">

		<Button
			android:id="@+id/btn_share"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"
			android:layout_gravity="center_horizontal"
			android:layout_margin="8dp"
			android:backgroundTint="@color/colorPrimary"
			android:drawableStart="@drawable/ic_share_white_24"
			android:drawablePadding="8dp"
			android:paddingStart="24dp"
			android:paddingTop="16dp"
			android:paddingEnd="24dp"
			android:paddingBottom="16dp"
			android:text="@string/share"
			android:textAllCaps="true"
			android:textAppearance="?android:textAppearanceMedium"
			android:textColor="@color/white"
			android:textStyle="bold" />
	</FrameLayout>
</RelativeLayout>

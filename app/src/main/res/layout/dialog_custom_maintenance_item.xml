<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:id="@+id/dlg_custom_item"
	android:layout_width="match_parent"
	android:layout_height="match_parent">

	<LinearLayout
		android:id="@+id/ll_mask"
		android:layout_width="match_parent"
		android:layout_height="match_parent"
		android:alpha="0.5"
		android:background="@android:color/black"
		android:clickable="true"
		android:focusable="true"
		android:orientation="horizontal"
		android:visibility="visible" />

	<ScrollView
		android:layout_width="match_parent"
		android:layout_height="match_parent">

		<LinearLayout
			android:layout_width="match_parent"
			android:layout_height="wrap_content"
			android:layout_gravity="center"
			android:layout_marginStart="32dp"
			android:layout_marginEnd="32dp"
			android:background="@android:color/white"
			android:orientation="vertical"
			android:padding="16dp">

			<LinearLayout
				android:layout_width="match_parent"
				android:layout_height="wrap_content">

				<TextView
					style="@style/CategoryStyle"
					android:text="@string/item_name" />

				<EditText
					android:id="@+id/edit_new_item_name"
					style="@style/EditorFieldStyle"
					android:hint="@string/item_name"
					android:importantForAutofill="no"
					android:inputType="text" />
			</LinearLayout>

			<LinearLayout
				android:layout_width="match_parent"
				android:layout_height="wrap_content">

				<TextView
					style="@style/CategoryStyle"
					android:text="@string/inspect_or_replace" />

				<Spinner
					android:id="@+id/spinner_inspect_replace"
					style="@style/EditorFieldStyle"
					android:layout_height="48dp"
					android:paddingStart="0dp"
					android:paddingEnd="16dp"
					android:spinnerMode="dropdown" />
			</LinearLayout>

			<LinearLayout
				android:layout_width="match_parent"
				android:layout_height="wrap_content">

				<TextView
					style="@style/CategoryStyle"
					android:text="@string/distance_interval_km" />

				<EditText
					android:id="@+id/edit_distance_interval"
					android:layout_width="0dp"
					android:layout_height="wrap_content"
					android:layout_weight="2"
					android:hint="@string/kilometer"
					android:importantForAutofill="no"
					android:inputType="number" />
			</LinearLayout>

			<LinearLayout
				android:layout_width="match_parent"
				android:layout_height="wrap_content">

				<TextView
					style="@style/CategoryStyle"
					android:text="@string/duration_interval_month" />

				<EditText
					android:id="@+id/edit_duration_interval"
					android:layout_width="0dp"
					android:layout_height="wrap_content"
					android:layout_weight="2"
					android:hint="@string/months_cap"
					android:importantForAutofill="no"
					android:inputType="number"
					android:maxLength="2" />
			</LinearLayout>

			<LinearLayout
				android:layout_width="match_parent"
				android:layout_height="wrap_content"
				android:layout_marginTop="16dp"
				android:orientation="horizontal">

				<TextView
					android:id="@+id/txt_close"
					android:layout_width="0dp"
					android:layout_height="wrap_content"
					android:layout_weight="1"
					android:fontFamily="sans-serif-medium"
					android:text="@string/close"
					android:textAllCaps="true"
					android:textColor="@android:color/holo_red_light" />

				<TextView
					android:id="@+id/txt_save"
					android:layout_width="0dp"
					android:layout_height="wrap_content"
					android:layout_weight="1"
					android:fontFamily="sans-serif-medium"
					android:text="@string/action_save"
					android:textAlignment="textEnd"
					android:textAllCaps="true"
					android:textColor="@android:color/holo_red_light" />
			</LinearLayout>
		</LinearLayout>
	</ScrollView>
</RelativeLayout>
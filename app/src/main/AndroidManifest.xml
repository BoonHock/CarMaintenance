<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
	package="com.incupe.vewec">
	<!-- Include required permissions for Google Mobile Ads to run. -->
	<uses-permission android:name="android.permission.SET_ALARM" />
	<uses-permission android:name="android.permission.INTERNET" />
	<uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
	<uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
	<uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

	<application
		android:allowBackup="true"
		android:icon="@mipmap/ic_launcher"
		android:label="@string/app_name"
		android:roundIcon="@mipmap/ic_launcher"
		android:supportsRtl="true"
		android:theme="@style/AppTheme">
		<provider
			android:name="androidx.core.content.FileProvider"
			android:authorities="com.incupe.vewec.fileProvider"
			android:exported="false"
			android:grantUriPermissions="true">
			<meta-data
				android:name="android.support.FILE_PROVIDER_PATHS"
				android:resource="@xml/file_paths" />
		</provider>
		<provider
			android:name=".data.VehicleMaintenanceProvider"
			android:authorities="com.incupe.vewec"
			android:exported="false" />

		<receiver android:name=".NotificationReceiver" />

		<!-- Sample AdMob App ID: ca-app-pub-3940256099942544~3347511713 -->
		<meta-data
			android:name="com.google.android.gms.ads.APPLICATION_ID"
			android:value="@string/ad_app_id" />

		<meta-data
			android:name="com.google.android.gms.ads.AD_MANAGER_APP"
			android:value="true" />

		<service android:name="com.google.firebase.messaging.FirebaseMessagingService">
			<intent-filter>
				<action android:name="com.google.firebase.MESSAGING_EVENT" />
			</intent-filter>
		</service>

		<activity
			android:name=".Main2Activity"
			android:label="@string/vewec"
			android:theme="@style/AppTheme.NoActionBar">
			<intent-filter>
				<action android:name="android.intent.action.MAIN" />

				<category android:name="android.intent.category.LAUNCHER" />
			</intent-filter>
		</activity>
		<activity
			android:name=".FuelPriceActivity"
			android:label="@string/fuel_prices"
			android:parentActivityName=".Main2Activity">
			<!-- Parent activity meta-data to support 4.0 and lower -->
			<meta-data
				android:name="android.support.PARENT_ACTIVITY"
				android:value="com.incupe.vewec.Main2Activity" />
		</activity>
		<activity
			android:name=".FuelEditorActivity"
			android:label="@string/fuel" />
		<activity
			android:name=".GetStartedActivity"
			android:noHistory="true" />
		<activity
			android:name=".NoInternetActivity"
			android:label="@string/no_internet_connection"
			android:parentActivityName=".Main2Activity">

			<!-- Parent activity meta-data to support 4.0 and lower -->
			<meta-data
				android:name="android.support.PARENT_ACTIVITY"
				android:value="com.incupe.vewec.Main2Activity" />
		</activity>
		<activity
			android:name=".CustomMaintenanceItemActivity"
			android:label="@string/custom_maintenance_item"
			android:parentActivityName=".Main2Activity"
			android:windowSoftInputMode="adjustResize">

			<!-- Parent activity meta-data to support 4.0 and lower -->
			<meta-data
				android:name="android.support.PARENT_ACTIVITY"
				android:value="com.incupe.vewec.Main2Activity" />
		</activity>
		<activity
			android:name=".SettingsActivity"
			android:label="@string/title_activity_settings"
			android:parentActivityName=".Main2Activity">

			<!-- Parent activity meta-data to support 4.0 and lower -->
			<meta-data
				android:name="android.support.PARENT_ACTIVITY"
				android:value="com.incupe.vewec.Main2Activity" />
		</activity>
		<activity
			android:name=".CarVariantTutorialActivity"
			android:label="@string/title_activity_settings"
			android:parentActivityName=".VehicleEditorActivity">

			<!-- Parent activity meta-data to support 4.0 and lower -->
			<meta-data
				android:name="android.support.PARENT_ACTIVITY"
				android:value="com.incupe.vewec.VehicleEditorActivity" />
		</activity>
		<activity
			android:name=".MaintenanceEditorActivity"
			android:parentActivityName=".Main2Activity"
			android:windowSoftInputMode="stateAlwaysHidden">

			<!-- Parent activity meta-data to support 4.0 and lower -->
			<meta-data
				android:name="android.support.PARENT_ACTIVITY"
				android:value="com.incupe.vewec.Main2Activity" />
		</activity>
		<activity
			android:name=".OdometerEditorActivity"
			android:label="@string/odometer"
			android:parentActivityName=".Main2Activity">

			<!-- Parent activity meta-data to support 4.0 and lower -->
			<meta-data
				android:name="android.support.PARENT_ACTIVITY"
				android:value="com.incupe.vewec.Main2Activity" />
		</activity>
		<activity
			android:name=".VehicleTemplateActivity"
			android:label="@string/vehicle_template"
			android:parentActivityName=".Main2Activity">

			<!-- Parent activity meta-data to support 4.0 and lower -->
			<meta-data
				android:name="android.support.PARENT_ACTIVITY"
				android:value="com.incupe.vewec.Main2Activity" />
		</activity>
		<activity
			android:name=".VehicleEditorActivity"
			android:parentActivityName=".Main2Activity">

			<!-- Parent activity meta-data to support 4.0 and lower -->
			<meta-data
				android:name="android.support.PARENT_ACTIVITY"
				android:value="com.incupe.vewec.Main2Activity" />
		</activity>
		<activity
			android:name="com.google.android.gms.ads.AdActivity"
			android:configChanges="keyboard|keyboardHidden|orientation|screenLayout|uiMode|screenSize|smallestScreenSize"
			android:theme="@android:style/Theme.Translucent" />
	</application>

</manifest>